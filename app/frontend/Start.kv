<Start>:
    size_hint:None,None
    size:dp(170),dp(170)
    pos_hint:{'center_y':.6,'center_x':.5}
    elevation:2
    circle_color:1,0,0,1
    canvas.before:
        Color:
            rgba:hex('#35ACE1')
        Ellipse:
            pos: self.pos
            size: self.size

        Color:
            rgba:root.circle_color
        Line:
            width:dp(2)
            circle: [self.pos[0]+dp(85), self.pos[1]+dp(85), dp(75)]

    MDLabel:
        id:start_label
        halign:'center'
        pos_hint:{'center_x':.5,'center_y':.5}
        text:'Stop'
        font_size:sp(40)
        theme_text_color:'Custom'
        text_color:1,0,0,1
    MDLabel:
        halign:'center'
        pos_hint:{'center_x':.5,'center_y':.25}
        text:'server'
        font_size:sp(12)
        theme_text_color:'Custom'
        text_color:1,1,1,1
