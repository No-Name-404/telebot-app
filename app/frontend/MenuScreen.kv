#:import hex kivy.utils.get_color_from_hex
<MenuScreen>:
    MDFloatLayout:
        md_bg_color:hex('#FFFFFF')
        MDFloatLayout:
            pos_hint:{'top':1}
            size_hint_y:.4
            Start:
                reply:reply
                image:image
                audio:audio
                all:all

            MDBoxLayout:
                pos_hint:{'y':.05}
                size_hint_y:None
                height:dp(50)
                MDFloatLayout: # reply
                    MDIcon:
                        halign:'center'
                        pos_hint:{'center_x':.5,'top':1}
                        icon:'reply'
                    MDLabel:
                        id:reply
                        halign:'center'
                        pos_hint:{'center_x':.5,'center_y':0}
                        text:'0'
                        theme_text_color:'Hint'
                        font_style:'Body1'

                MDFloatLayout: # messages image
                    MDIcon:
                        halign:'center'
                        pos_hint:{'center_x':.5,'top':1}
                        icon:'message-image'
                    MDLabel:
                        id:image
                        halign:'center'
                        pos_hint:{'center_x':.5,'center_y':0}
                        text:'0'
                        theme_text_color:'Hint'
                        font_style:'Body1'

                MDFloatLayout: # microphone messages
                    MDIcon:
                        halign:'center'
                        pos_hint:{'center_x':.5,'top':1}
                        icon:'microphone'
                    MDLabel:
                        id:audio
                        halign:'center'
                        pos_hint:{'center_x':.5,'center_y':0}
                        text:'0'
                        theme_text_color:'Hint'
                        font_style:'Body1'

                MDFloatLayout: # all messages
                    MDIcon:
                        halign:'center'
                        pos_hint:{'center_x':.5,'top':1}
                        icon:'comment-text-multiple'
                    MDLabel:
                        id:all
                        halign:'center'
                        pos_hint:{'center_x':.5,'center_y':0}
                        text:'0'
                        theme_text_color:'Hint'
                        font_style:'Body1'

        MDBoxLayout:
            size_hint_y:.6
            md_bg_color:hex('#35ACE1')
            radius:dp(20),dp(20),0,0
            orientation:'vertical'
            MDBoxLayout:
                size_hint_y:None
                height:dp(40)
                MDLabel:
                    text:app.ar(app.language['messages'])
                    halign:'center'
                    font_name:app.font
                    theme_text_color:'Custom'
                    text_color:1,1,1,1
            ScrollView:
                pos_hint:{'top':1}
                MDGridLayout:
                    cols:1
                    spacing:dp(6)
                    adaptive_height: True
                    id:messages

        MDFloatingActionButton:
            icon: "plus"
            pos_hint:{'center_x':.88,'y':.02}
            md_bg_color:hex('#FFFFFF')
            on_release:
                root.add_messages.open()
