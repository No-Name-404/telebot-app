#:import hex kivy.utils.get_color_from_hex

<msg@MDBoxLayout>:
    md_bg_color:hex('#5454E1')[0:-1]+[.3]
    size_hint_y:None
    height:dp(48)
    MDLabel:
        text:'help'

MDFloatLayout:
    md_bg_color:hex('#FFFFFF')
    MDFloatLayout:
        pos_hint:{'top':1}
        size_hint_y:.3
        MDBoxLayout:
            orientation:'vertical'
            pos_hint:{'top':1}

            MDFloatLayout:
                MDLabel:
                    halign:'center'
                    pos_hint:{'center_x':.5,'center_y':.5}
                    text:'Messages'
                    theme_text_color:'Custom'
                    text_color:0,1,0,1
                    font_style:'H5'
                MDLabel:
                    halign:'center'
                    pos_hint:{'center_x':.5,'center_y':.2}
                    text:'0'
                    theme_text_color:'Custom'
                    text_color:0,1,0,1
                    font_style:'H6'

            MDBoxLayout:
                MDFloatLayout:
                    MDLabel:

                        halign:'center'
                        pos_hint:{'center_x':.5,'center_y':.6}
                        text:'send'
                        theme_text_color:'Custom'
                        text_color:0,1,0,1
                        font_style:'H6'

                    MDLabel:
                        halign:'center'
                        pos_hint:{'center_x':.5,'center_y':.38}
                        text:'0'
                        theme_text_color:'Hint'
                        font_style:'Body1'

                MDFloatLayout:
                    MDLabel:
                        halign:'center'
                        pos_hint:{'center_x':.5,'center_y':.6}
                        text:'unknow'
                        theme_text_color:'Custom'
                        text_color:1,0,0,1
                        font_style:'H6'
                    MDLabel:
                        halign:'center'
                        pos_hint:{'center_x':.5,'center_y':.38}
                        text:'0'
                        theme_text_color:'Hint'
                        font_style:'Body1'

    MDFloatLayout:
        size_hint_y:.7
        md_bg_color:hex('#35ACE1')
        radius:dp(40),dp(40),0,0
        ScrollView:
            pos_hint:{'top':1}
            MDGridLayout:
                cols:1
                adaptive_height: True
                id:messages
                # MDIconButton
                # msg:

    MDFloatingActionButton:
        icon: "plus"
        pos_hint:{'center_x':.88,'y':.02}
        md_bg_color:hex('#FFFFFF')
